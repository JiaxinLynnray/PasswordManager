<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.vast.pm.dao.UserDao">
    <select id="queryById" resultType="cn.vast.pm.entity.User" parameterType="long">
        SELECT
            userId,
            username,
            password
        FROM t_user
        WHERE userId = #{id}
    </select>
    <select id="queryAll" resultType="cn.vast.pm.entity.User">
        SELECT
            userId,
            username,
            password
        FROM t_user
        ORDER BY userId
        LIMIT #{offset}, #{limit}
    </select>
</mapper>